@model IEnumerable<DAL.Model.Stock>

@{
    ViewBag.Title = "Stocks";
}

<div>
    <a href="@Url.Action("Create", "Stocks")" class="btn btn-primary"><i class="fa fa-plus"></i> Add New</a>
</div>
<br /><br />
<div id="product" class="table-responsive ">
    <table class="table table-condensed table-hover table-bordered table-striped table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.MarcucciCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MachineKeyBoardNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img style="width:50px;" src="http://marcucci.azurewebsites.net/@(item.Product.ImageUrl)"  alt="@item.Product.Name" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.MarcucciCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MachineKeyBoardNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.StockID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.StockID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.StockID })
                </td>
            </tr>
        }

    </table>
</div>