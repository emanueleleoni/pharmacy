@model IEnumerable<DAL.Model.Transaction>

@{
    ViewBag.Title = "Orders";
}

<section id="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="aa-myaccount-login">
                                <p class="text-success">@ViewBag.StatusMessage</p>
                                <h4>I tuoi ordini</h4>
                                <table class="table">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TransactionDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TotalAmount)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Taxes)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Type)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Status)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Shipped)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ShippingDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Delivered)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DeliveryDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Notes)
                                        </th>
                                        <th></th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TransactionDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TotalAmount)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Taxes)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Type)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Status)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Shipped)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ShippingDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Delivered)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DeliveryDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Notes)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Dettaglio", "OrderDetails", new { id = item.TransactionID })
                                            </td>
                                        </tr>
                                    }

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
